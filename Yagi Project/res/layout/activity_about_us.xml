<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutUs"
    android:background="#FFFFFF" >

    <ImageView 
        android:id="@+id/aboutUs"
        android:background="@drawable/aboutus"
        android:contentDescription="@string/about_us"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        />
    
    <!-- Justin -->
    
    <ImageView 
        android:id="@+id/justin"
        android:background="@drawable/justin"
        android:contentDescription="Justin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUs"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        />
    
    <TextView 
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Justin Bernardo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/aboutUs"
        android:layout_toRightOf="@+id/justin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Lead"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_below="@+id/name1"
        android:layout_toRightOf="@+id/justin"
        android:layout_marginLeft="10dp"
        />
    
    <!-- Ramya -->
    
    <ImageView 
        android:id="@+id/ramya"
        android:background="@drawable/ramya"
        android:contentDescription="Ramya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/justin"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        />
    
    <TextView 
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Ramya Babu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/justin"
        android:layout_toRightOf="@+id/ramya"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asst. Team Lead"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_below="@+id/name2"
        android:layout_toRightOf="@+id/ramya"
        android:layout_marginLeft="10dp"
        />
    
    <!-- Shantanu -->
    
    <ImageView 
        android:id="@+id/shantanu"
        android:background="@drawable/shantanu"
        android:contentDescription="Shantanu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ramya"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        />
    
    <TextView 
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Shantanu Bobhate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/ramya"
        android:layout_toRightOf="@+id/shantanu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technical Lead"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_below="@+id/name3"
        android:layout_toRightOf="@+id/shantanu"
        android:layout_marginLeft="10dp"
        />

    <!-- Bert -->
    
    
    
    <!-- Brian -->
    
    <ImageView 
        android:id="@+id/brian"
        android:background="@drawable/brian"
        android:contentDescription="Brian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shantanu"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        />
    
    <TextView 
        android:id="@+id/name5"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Brian Mulyadi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/shantanu"
        android:layout_toRightOf="@+id/brian"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design Lead"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_below="@+id/name5"
        android:layout_toRightOf="@+id/brian"
        android:layout_marginLeft="10dp"
        />
    
</RelativeLayout>
