<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <ImageView 
        android:id="@+id/step3Tutorial"
        android:src="@drawable/step3tutorial"
        android:contentDescription="@string/step3_tutorial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        />
    
    <ImageView 
        android:id="@+id/step3"
        android:src="@drawable/step3"
        android:contentDescription="@string/step3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step3Tutorial"
        android:layout_marginTop="30dp"
        />
    
    <ImageView
        android:id="@+id/tab3"
        android:src="@drawable/tab3"
        android:layout_width="100dp"
        android:layout_height="9dp"
       	android:layout_alignParentBottom="true"
       	android:layout_centerHorizontal="true"
       	android:layout_marginBottom="20dp"
       	/>

</RelativeLayout>
