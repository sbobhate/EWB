<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ewbproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ewbproject.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ewbproject.AboutUs"
            android:label="@string/title_activity_about_us"
            android:parentActivityName="com.example.ewbproject.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ewbproject.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ewbproject.Instructions"
            android:label="@string/title_activity_instructions"
            android:parentActivityName="com.example.ewbproject.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ewbproject.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ewbproject.Reader"
            android:label="@string/title_activity_reader"
            android:parentActivityName="com.example.ewbproject.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ewbproject.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ewbproject.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.ewbproject.Reader"
            android:theme="@android:style/Theme.Holo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ewbproject.Reader" />
        </activity>
        <activity
            android:name="com.example.ewbproject.Blueprint"
            android:label="@string/title_activity_blueprint" >
        </activity>
    </application>

</manifest>
